<table class="table table-hover">
  <tr>
    <th>Ranking</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>
  <% @movies.each do |movie| %>
  <tr>
    <td> Ranking: </td>
    <td><%= link_to movie.name, movies_show_path(movie) %></td>
    <td><%= link_to "Upvote", movies_show_path(movie), class: "btn btn-default" %></td>
  </tr>
  <% end %>
</table>

