<table class="table table-hover">
  <tr>
    <th>Votes</th>
    <th>Name</th>
    <th>Upvote</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td> Votes: <%= book.rank %></td>
    <td><%= link_to book.name, books_show_path(book) %></td>
    <td><%= link_to "Upvote", books_upvote_path(book), class: "btn btn-default" %></td>
  </tr>
  <% end %>
</table>

<%= link_to "View All Media", root_path, class:"btn btn-default" %>
<%= link_to "Add a book", books_new_path, class:"btn btn-default" %>
