<h2>Edit book</h2>

<%= form_for @book, url: {action: "update"} do |book| %>
  <div class="form-group">
    <label>Name</label>
    <%= book.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Author</label>
    <%= book.text_field :author, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Description</label>
    <%= book.text_area :description, class: "form-control" %>
  </div>
  <%= book.submit "Save", class: "btn btn-default" %>
<% end %>
