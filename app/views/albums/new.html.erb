<h2>New album</h2>

<%= form_for @album, url: {action: "create"} do |album| %>
  <div class="form-group">
    <label>Name</label>
    <%= album.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Artist</label>
    <%= album.text_field :artist, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Description</label>
    <%= album.text_area :description, class: "form-control" %>
  </div>
  <%= album.submit "Save", class: "btn btn-default" %>
<% end %>
