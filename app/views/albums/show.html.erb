<h1><%= @album.name %><small> Recorded by: <%= @album.artist %></small></h1>
<h4>Ranked: <%= @album.rank %></h4>
<p>
<%= @album.description %>
<p>

<!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
<%= link_to "Upvote", albums_upvote_path(@album), class: "btn btn-primary" %>
<p>
<%= link_to "Edit #{@album.name}", albums_edit_path(@album), class:"btn btn-default" %>
<%= link_to "DELETE", albums_destroy_path(@album), class: "btn btn-danger", onclick: "myFunction(event)"%>
<%= link_to "View All Albums", albums_path, class:"btn btn-default" %>
<%= link_to "View All Media", root_path, class: "btn btn-default" %>
